{
  "swagger": "2.0",
  "info": {
    "title": "Engine API",
    "description": "The Engine microservice API",
    "version": "v1.0"
  },
  "basePath": "/1",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json",
    "application/x-yaml",
    "application/vnd.pfa+json",
    "application/vnd.ppfa"
  ],
  "produces": [
    "text/plain",
    "application/json"
  ],
  "paths": {
    "/swagger": {
      "get": {
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "returns the present API specifiction"
          }
        }
      }
    },
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "ok"
          }
        }
      }
    },
    "/config": {
      "get": {
        "responses": {
          "200": {
            "description": "current configuration info",
            "schema": { "$ref": "#/definitions/configuration" }
          }
        }
      },
      "post": {
        "parameters": [
          {
            "name": "config",
            "in": "body",
            "description": "new configuration values",
            "schema": { "$ref": "#/definitions/configuration" }
          }
        ],
        "responses": {
          "200": {
            "description": "configuration updated successfully"
          }
        }
      }
    },
    "/job/model": {
      "put": {
        "consumes": [
          "application/x-yaml",
          "application/vnd.pfa+json",
          "application/vnd.ppfa"
        ],
        "parameters": [
          {
            "name": "model",
            "in": "body",
            "description": "a PFA model either as JSON, YAML, or PPFA",
            "schema": { "type": "string" },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "model set successfully"
          }
        }
      }
    },
    "/job/stream": {
      "put": {
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "stream",
            "in": "body",
            "description": "a stream descriptor",
            "schema": { "$ref": "stream-descriptor.json" },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "stream descriptor set successfully"
          }
        }
      }
    },
    "/job": {
      "delete": {
        "responses": {
          "204": {
            "description": "model stopped successfully"
          }
        }
      }
    },
    "/job/scale": {
      "post": {
        "parameters": [
          {
            "name": "instances",
            "in": "query",
            "description": "the new number of instances for the model",
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "model scaled successfully"
          },
          "400": {
            "description": "errorneous parameters"
          }
        }
      }
    },
    "/job/snapshot": {
      "post": {
        "responses": {
          "200": {
            "description": "PFAEngine snapshot as JSON object"
          },
          "400": {
            "description": "no model uploaded"
          }
        }
      }
    },
    "/job/status": {
      "get": {
        "responses": {
          "200": {
            "description": "engine status info",
            "schema": { "$ref": "#/definitions/status" }
          }
        }
      }
    },
    "/job/output": {
      "get": {
        "responses": {
          "200": {
            "description": "buffered outputs of the running model",
            "schema": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "/job/statistics": {
      "get": {
        "responses": {
          "200": {
            "description": "engine status info",
            "schema": { "$ref": "#/definitions/performance-statistics" }
          },
          "400": {
            "description": "no running model"
          }
        }
      },
      "DELETE": {
        "responses": {
          "204": {
            "description": "performance counters reset"
          }
        }
      }
    },
    "/job/memory": {
      "get": {
        "responses": {
          "200": {
            "description": "memory usage info",
            "schema": { "$ref": "#/definitions/memory-usage" }
          },
          "400": {
            "description": "no running model"
          }
        }
      }
    }
  },
  "definitions": {
    "configuration": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "default-timeout": { "type": "string" },
          "default-pfa-version": { "type": "string" }
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "numberOfInstancesRunning": { "type": "integer" },
        "instancesRunning": {
          "type": "array",
          "items": { "type": "integer" }
        },
        "serverOptions": { "type": "object" },
        "pfaVersion": { "type": "integer" },
        "pfaDocument": {
          "type": "object",
          "properties": {
            "name":          { "type": "string" },  
            "method":        { "type": "string" },  
            "input":         { "type": "object" },  
            "output":        { "type": "object" },  
            "numberOfFcns":  { "type": "integer" },  
            "numberOfCells": { "type": "integer" },  
            "numberOfPools": { "type": "integer" },  
            "randseed":      { "type": "integer" },  
            "doc":           { "type": "string" },  
            "metadata":      { "type": "object" },  
            "options":       { "type": "object" }
          },
          "required": false
        }
      }
    },
    "performance-statistics": {
      "type": "object",
      "properties": {
        "throughputTotalCount":     { "type": "integer" },
        "throughputTotalNanosecs":  { "type": "integer" },
        "instances":                { "type": "integer" }
      }
    },
    "memory-usage": {
      "type": "object",
      "properties": {
        "sharedCells":    { "$ref": "#/definitions/memory-report" },
        "sharedPools":    { "$ref": "#/definitions/memory-report" },
        "unsharedCells":  { "$ref": "#/definitions/memory-report" },
        "unsharedPools":  { "$ref": "#/definitions/memory-report" },
        "totalUsage":     { "type": "integer" },
        "totalBytes":     { "type": "integer" }
      }
    },
    "memory-report": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name":  { "type": "string" },
          "usage": { "type": "integer" },
          "bytes": { "type": "integer" },
          "exact": { "type": "boolean" },
          "items": { "type": "integer" }
        }
      }
    }
  }
}
