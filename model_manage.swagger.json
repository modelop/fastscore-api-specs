{
  "swagger": "2.0",
  "info": {
    "title": "Model Manage API",
    "description": "The Model Manage microservice API",
    "version": "v1.0"
  },
  "basePath": "/1",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/x-yaml",
    "application/vnd.pfa+json",
    "application/vnd.ppfa"
  ],
  "produces": [
    "application/vnd.pfa+json",
    "application/vnd.ppfa",
    "application/json"
  ],
  "paths": {
    "/swagger": {
      "get": {
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "returns the present API specifiction"
          }
        }
      }
    },
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "ok"
          }
        }
      }
    },
    "/model": {
      "get": {
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "returns a list of model names (or JSON objects if metadata=1)"
          }
        },
        "parameters": [
          {
            "name": "metadata",
            "in": "query",
            "type": "integer",
            "description": "set to 1 to include metadata in the list of models"
          }
        ]
      }
    },
    "/model/{model}": {
      "get": {
        "produces": [
          "application/vnd.pfa+json",
          "application/vnd.ppfa",
          "application/x-yaml",
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "retrieves PFA model as JSON, YAML, or PrettyPFA"
          }
        },
        "parameters": [
          {
            "name": "model",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "set to 1 to retrieve only the model metadata"
          }
        ]
      },
      "put": {
        "consumes": [
          "application/x-yaml",
          "application/vnd.pfa+json",
          "application/vnd.ppfa"
        ],
        "responses": {
          "201": {
            "description": "model added successfully"
          }
        },
        "parameters": [
          {
            "name": "model",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "set to 1 to retrieve only the model metadata"
          }
        ]
      },
      "delete": {
        "responses": {
          "204": {
            "description": "model deleted successfully"
          }
        },
         "parameters": [
          {
            "name": "model",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "set to 1 to retrieve only the model metadata"
          }
        ]
      }
    },
    "/stream/{stream}": {
      "get": {
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "retrieves a stream descriptor"
          }
        },
         "parameters": [
          {
            "name": "stream",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "the stream ID"
          }
        ]
      },
      "put": {
        "consumes": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "stream added successfully",
            "schema": { "$ref": "stream-descriptor.json" }
          }
        },
         "parameters": [
          {
            "name": "stream",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "the stream ID"
          }
        ]
      },
      "delete": {
        "responses": {
          "204": {
            "description": "stream deleted successfully"
          }
        },
         "parameters": [
          {
            "name": "stream",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "the stream ID"
          }
        ]
      }
    },
    "/stream/{stream}/sample": {
      "get": {
        "produces": [
          "application/json"
        ],
         "parameters": [
          {
            "name": "stream",
            "in": "query",
            "type": "integer",
            "required": true,
            "description": "the stream ID"
          }
        ],
        "responses": {
          "200": {
            "description": "gets sample data from the stream",
            "schema": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "406": {
            "description": "stream descriptor is invalid"
          }
        }
      }
    }
  }
}
