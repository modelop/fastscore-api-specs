{
  "swagger": "2.0",
  "info": {
    "title": "Connect API",
    "description": "The Connect microservice API",
    "version": "v1.0"
  },
  "basePath": "/1",
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/swagger": {
      "get": {
        "responses": {
          "200": {
            "description": "returns the present API specifiction"
          }
        }
      }
    },
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "ok"
          }
        }
      }
    },
    "/config": {
      "get": {
        "responses": {
          "200": {
            "description": "current configuration"
          }
        }
      },
      "put": {
        "parameters": [
          {
            "name": "config",
            "in": "body",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": {
            "description": "configuration set"
          },
          "204": {
            "description": "configuration updated"
          }
        }
      }
    },
    "/connect": {
     "get": {
        "responses": {
          "200": {
            "description": "a list of known microservices",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/microservice" }
            }
          },
          "406": {
            "description": "config not set yet"
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "select instances with this name",
            "schema": {"type": "string" }
          },
          {
            "name": "api",
            "in": "query",
            "description": "select instances of this API",
            "schema": {"type": "string" }
          },
          {
            "name": "host",
            "in": "query",
            "description": "select instances on this host",
            "schema": {"type": "string" }
          },
          {
            "name": "port",
            "in": "query",
            "description": "select instances on this port",
            "schema": {"type": "integer" }
          },
          {
            "name": "health",
            "in": "query",
            "description": "select instances with this health status",
            "schema": {"type": "string" }
          },
          {
            "name": "return",
            "in": "query",
            "description": "a comma-separated list of fields to include",
            "schema": {"type": "string" }
          }
        ]
      }
    }
  },
  "definitions": {
    "microservice": {
      "type": "object",
      "properties": {
        "name": { "type": "string"},
        "ip": { "type": "string"},
        "port": { "type": "string"},
        "health": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
