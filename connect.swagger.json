{
  "swagger": "2.0",
  "info": {
    "title": "Connect API",
    "description": "The Connect microservice API",
    "version": "v1.0"
  },
  "basePath": "/1",
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/swagger": {
      "get": {
        "responses": {
          "200": {
            "description": "returns the present API specifiction"
          }
        }
      }
    },
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "ok"
          }
        }
      }
    },
    "/config": {
      "get": {
        "responses": {
          "200": {
            "description": "current configuration"
          }
        }
      },
      "put": {
        "parameters": [
          {
            "name": "config",
            "in": "body",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": {
            "description": "configuration set"
          },
          "204": {
            "description": "configuration updated"
          }
        }
      }
    },
    "/connect": {
      "parameters": [
        {
          "name": "api",
          "in", "query",
          "description": "select only instances of the API",
          "schema": "string"
        }
      ],
      "get": {
        "responses": {
          "200": {
            "description": "a list of known microservices",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/microservice" }
            }
          },
          "406": {
            "description": "config not set yet"
          }
        }
      }
    }
  },
  "definitions": {
    "microservice": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "required": true },
        "ip": { "type": "string", "required": true },
        "port": { "type": "string", "required": true },
        "health": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
